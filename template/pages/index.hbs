<div id="main" role="main" >
    <div class="section-contribution">
        <div class="container">
            <figure><img src="assets/img/box.png" alt=""></figure>
            <article class="desc">
                <h2 class="title-md">
                    <strong class="primary-color">a free</strong> salary exchange website for your industry.
                </h2>
                <div class="content-text">
                    <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisihenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occae</p>
                    <div class="text-right">
                        <a href="#" class="btn-square trans">contribute</a>
                    </div>
                </div>
            </article>
        </div>
    </div><!-- //section-contribution -->

    <section class="emreason">
        <div class="container">
            {{#whyus}}
                <h2 class="title-md">{{{title}}}</h2>
                <div class="row">
                    {{~#item}}
                        <article class="emreason-box col-sm-4">
                            <a href="#">
                                <figure><img src="assets/img/{{thumb}}"></figure>
                                <h3>{{title}}</h3>
                                <div class="content-text">
                                    <p>{{desc}}</p>
                                </div>
                            </a>
                        </article> <!-- //emreason-box -->
                    {{~/item}}
                </div>
            {{/whyus}}
        </div>
    </section><!-- //emreason -->

    <div class="sshome-table">
        {{#salaryTable}}
        <header>
            <div class="container">
              <h2 class="title-md">{{{title}}}</h2> 
            </div> 
        </header>
        
        <div class="container"> 
            <div class="table-responsive">
                <table class="table tb-contrib"> 
                    <tr>
                        <th>salary</th>
                        <th>job title</th>
                        <th>location</th>
                        <th>Job type</th>
                        <th>date added</th>
                        <th style="width: 14%"></th>
                    </tr>
                    <tr><td colspan="6" class="td-space-head"></td></tr>
                    {{~#list}}
                    <tr>
                        <td class="{{#is new true}}new{{/is}}">
                            <span class="tb-salary">{{salary}}</span>
                        </td>
                        <td>{{job}}</td>
                        <td>{{location}}</td>
                        <td>{{type}}</td>
                        <td>{{date}}</td>
                        <td class="action" width="17%"><a href="#" class="btn-tbDetail">{{btn}}</a></td>
                    </tr>
                    <tr><td colspan="6" class="td-space"></td></tr>
                    {{~/list}}
                </table>
            </div>
        {{/salaryTable}}

            <article class="sshome-table-desc">
                <h2 class="title-md">All salaries are posted anonymously.</h2>
                <div class="content-text">
                    <p>XYZ Salary Survey is the only live real-time salary survey for your industy providing accurate, global remuneration data to employees and companies 24/7/365.</p>
                </div>
            </article><!-- //sshome-table-desc -->
        </div>
    </div> <!-- //sshome-table -->

     <div class="ss-join">
