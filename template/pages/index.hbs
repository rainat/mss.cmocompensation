                  </div>
                  <div class="form-group col-md-4">
                    <input type="text" class="form-control" placeholder="Last Name">
                  </div>
                  <div class="form-group col-md-4">
                    <input type="email" class="form-control" placeholder="Valid email address">
                  </div>
                  <div class="clearfix"></div>
                  <div class="form-groupBtn">
                      <input type="submit" value="sign up" class="btn-square">
                  </div>
                </form>
            </div><!-- //form-join -->
        {{/signup}}
        </div>
    </div><!-- //ss-join -->

</div> <!-- //MAIN -->
  